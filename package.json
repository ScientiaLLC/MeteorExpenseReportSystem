{
  "name": "meteorExpenseReport",
  "private": true,
  "scripts": {
    "start-dev": "MONGO_URL=\"mongodb://admin:admin@137.112.40.146:27017/dev\" meteor",
    "lint-dev": "eslint ./client ./client/**/*.jsx ./client/*.jsx ./server ./imports ./imports/**/*.jsx --fix",
    "lint-ci": "eslint ./client ./client/**/*.jsx ./client/*.jsx ./server ./imports ./imports/**/*.jsx",
    "test": "meteor test --once --driver-package dispatch:mocha-phantomjs"
  },
  "dependencies": {
    "babel-runtime": "^6.23.0",
    "bcrypt": "^1.0.2",
    "check": "^1.0.0",
    "classnames": "^2.2.5",
    "coffee-script": "^1.0.17",
    "ejson": "^2.1.2",
    "flexboxgrid": "^6.3.1",
    "material-ui": "^0.16.4",
    "meteor-node-stubs": "~0.2.0",
    "react": "^15.4.1",
    "react-addons-pure-render-mixin": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-router": "^2.8.1",
    "react-tap-event-plugin": "^2.0.1"
  },
  "devDependencies": {
    "babel-eslint": "^6.1.2",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.15.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.0.0",
    "eslint-plugin-react": "^6.2.1",
    "mocha": "^3.1.1"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true,
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "meteor",
      "react"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor",
      "react": {
        "createClass": "createClass",
        "pragma": "React",
        "version": "15.0"
      }
    },
    "rules": {
      "import/no-extraneous-dependencies": "off",
      "react/jsx-uses-react": "error",
      "react/jsx-uses-vars": "error",
      "react/prefer-es6-class": [
        2,
        "never"
      ],
      "react/prefer-stateless-function": [
        0
      ],
      "react/require-extension": [
        0
      ],
      "no-underscore-dangle": [
        0
      ],
      "react/forbid-prop-types": [
        0
      ]
    },
    "globals": {
      "document": true
    }
  }
}
